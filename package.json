{
  "name": "bee-travels",
  "private": true,
  "workspaces": [
    "services/currency-exchange",
    "services/destination",
    "services/hotel",
    "services/ui/backend",
    "services/ui/frontend"
  ],
  "scripts": {
    "lint": "eslint \"services/**/*.js\"",
    "kp": "process=$(lsof -i :\"$@\" -t); [ -z \"$process\" ] || echo killing port \"$@\"; echo $process | xargs kill",
    "kill-ports": "yarn kp 9000 && yarn kp 9001 && yarn kp 9101 && yarn kp 9201 && yarn kp 3000",
    "start": "yarn workspaces foreach -pi -j 10 \"$@\" run start",
    "test": "yarn workspace currency-exchange run test && yarn workspace destination run test && yarn workspace hotel run test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "@yarnpkg/pnpify": "^2.0.0-rc.21",
    "babel-eslint": "10.x",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "prettier": "^2.0.5"
  }
}
